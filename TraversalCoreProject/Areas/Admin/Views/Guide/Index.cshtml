@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<style>
    img{
        border-radius:50%
    }
</style>
<h1>Guide List</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Photo</th>
        <th>Name</th>
        <th>Description</th>
        <th>Status</th>
        <th>Edit</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><img src="@item.Image" height="50" width="50" /></td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            @{
                if (item.Status == true)
                {
                    <td><a href="/Admin/Guide/ChangeToFalse/@item.GuideID" class="btn btn-outline-warning">Do Passive</a></td>
                }
                else
                {
                    <td><a href="/Admin/Guide/ChangeToTrue/@item.GuideID" class="btn btn-outline-info">Do Active</a></td>
                }
            }
            <td><a href="/Admin/Guide/EditGuide/" class="btn btn-outline-success">Update</a></td>
        </tr>
    }
</table>
<a href="/Admin/Guide/AddGuide/" class="btn btn-outline-primary">Add Guide</a>

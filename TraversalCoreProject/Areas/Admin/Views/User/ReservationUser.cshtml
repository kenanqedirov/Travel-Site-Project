@model List<Reservation>

@{
    ViewData["Title"] = "ReservationUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int Count = 0;
}

<h1>User Reservation History</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>User Name Surname</th>
        <th>Destination</th>
        <th>Date</th>
        <th>Details</th>
    </tr>
    @foreach(var item in Model)
    {
            Count += 1;        
        <tr>
            <td>@Count</td>
            <td>###</td>
            <td>@item.Destination.City</td>
            <td>@item.PersonCount</td>
            <td>@(((DateTime)item.ReservationDate).ToString("dd-MM-yyyy"))</td>
            <td><a href="" class="btn btn-outline-primary">Details</a></td>
        </tr>
    }
    <a href="#" onclick="window.history.back()">GERİ DÖN</a>
</table>
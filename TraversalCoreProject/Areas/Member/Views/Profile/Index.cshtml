@model UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MemberNewLayout.cshtml";
}


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Profile Update page</h4>
                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                        <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                        <li><a data-action="close"><i class="ft-x"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="card-content collapse show">
                <div class="card-body">
                    <p class="card-text">You watch details about Profile</p>
                    <div class="table-responsive">
                        <form method="post" enctype="multipart/form-data">
                            @Html.Label("Name")
                            <input type="text" asp-for="name" class="form-control" />
                            <br />
                            @Html.Label("Surname")
                            <input type="text" asp-for="surname" class="form-control" />
                            <br />
                            @Html.Label("MailAddres")
                            <input type="text" asp-for="mail" class="form-control" />
                            <br />
                            @Html.Label("Password")
                            <input type="text" asp-for="password" class="form-control" />
                            <br />
                            @Html.Label("Confirm password")
                            <input type="text" asp-for="confirmPassword" class="form-control" />
                            <br />
                            @Html.Label("Phone Number")
                            <input type="text" asp-for="phoneNumber" class="form-control" />
                            <br />
                            <div class="form-group">
                                <label>Choose Image</label>
                                <input type="file" asp-for="Image" />
                            </div>
                            <br />
                            <button class="btn btn-primary">Update</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


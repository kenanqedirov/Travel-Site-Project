@using EntityLayer.Concrete
@model List<Destination>

@{
    ViewData["Title"] = "GetCitiesSearchByName";
    Layout = "~/Views/Shared/_MemberNewLayout.cshtml";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Search Tour Destinations</h4>
                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                        <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                        <li><a data-action="close"><i class="ft-x"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="card-content collapse show">
                <div class="card-body">
                    <p class="card-text">You watch active tour destinations on down table</p>
                    <form asp-action="GetCitiesSearchByName" asp-controller="Destination" asp-area="Member" method="post">
                        <div>
                            <b> <p>Please Add Searching City</p></b>
                            <input type="text" name="searchString" value="@ViewData["CuurentFilter"]" class="form-control" />
                            <br />
                            <input type="submit" value="City Search" class="btn btn-outline-dark"/>
                        </div>
                    </form>

                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>City</th>
                                    <th>Day</th>
                                    <th>Capacity</th>
                                    <th>Price</th>
                                    <th>Details</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.DestinationID</td>
                                        <td>@item.City</td>
                                        <td>@item.DayNight</td>
                                        <td>@item.Capacity</td>
                                        <td>@item.Price$</td>
                                        <td><a href="/Destination/DestinationDetails/@item.DestinationID" class="btn btn-outline-info">Details</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

